{
  "compilerOptions": {
    "experimentalDecorators": true,
    "strict": false,
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "emitDeclarationOnly": true,
    "declaration": true,
    "outDir": "types"
  },
  "include": [
    "src/**/*"
  ],
}